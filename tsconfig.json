{
   "compilerOptions": {
      "outDir": "build",
      // "removeComments": true,
      // i wish keep it in .d.ts files only, but not in js files loll
      // that would be great
      "lib": ["esnext"],
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "rootDir": "src",
      "strict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "ES2020",
      "sourceMap": true,
      "declaration": true
   },
   "include": ["src/**/*"],
   "typeAcquisition": {
      "enable": true
   }
}
